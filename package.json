{
  "name": "algoo",
  "version": "1.0.0",
  "description": "A modern Node.js backend project with TypeScript and ESM",
  "main": "dist/server.js",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && tsc-alias",
    "start:otel": "node --require ./dist/otel.js ./dist/server.js",
    "build:webpack": "webpack --config webpack.config.ts",
    "build:prod": "npm run build && npm run build:webpack",
    "start": "node dist/server.js",
    "start:nodemon": "nodemon --watch src --exec tsx src/server.ts",
    "start:pm2": "pm2 start dist/server.js --name=algoo",
    "start:pm2dev": "pm2 start src/server.ts --interpreter=./node_modules/.bin/tsx --name=algoo-dev --watch",
    "pm2:runtime": "pm2-runtime dist/server.js",
    "pm2:ecosystem": "pm2 start ecosystem.config.cjs",
    "worker": "tsx src/worker.ts",
    "service-worker": "tsx src/service-worker.ts",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,json,md}'",
    "clean": "rm -rf dist"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "^5.0.0",
    "@graphql-tools/schema": "^10.0.25",
    "@influxdata/influxdb-client": "^1.35.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.62.0",
    "@opentelemetry/exporter-prometheus": "^0.203.0",
    "@opentelemetry/sdk-node": "^0.203.0",
    "chalk": "^5.5.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "express-rate-limit": "^8.1.0",
    "graphql": "^16.11.0",
    "graphql-subscriptions": "^3.0.0",
    "graphql-tag": "^2.12.6",
    "helmet": "^8.1.0",
    "ioredis": "^5.7.0",
    "morgan": "^1.10.1",
    "opossum": "^9.0.0",
    "pg": "^8.16.3",
    "prom-client": "^15.1.3",
    "serve-favicon": "^2.5.1",
    "toobusy-js": "^0.5.1",
    "winston": "^3.17.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/chalk": "^0.4.31",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/helmet": "^0.0.48",
    "@types/ioredis": "^4.28.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.3.1",
    "@types/opossum": "^8.1.9",
    "@types/serve-favicon": "^2.5.7",
    "@types/toobusy-js": "^0.5.4",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^4.2.5",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "nodemon": "^3.1.10",
    "prettier": "^2.8.8",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "webpack": "^5.101.0",
    "webpack-cli": "^5.1.4"
  }
}
